---
import TableOfContents from '../RightSidebar/TableOfContents.tsx';

const {content} = Astro.props;
const title =   content?.title;
const headers = content?.astro?.headers;
---
<style>
  .content {
    padding: 0;
    max-width: 75ch;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .block {
    display: block;
  }
  @media (min-width: 50em) {
    .sm\:hidden {
      display: none;
    }
  }

  :global(.content .main-text ul li) {
    list-style: disc inside;
    margin-top: 0.75em;
  }

  :global(.content .main-text a) {
    font-weight: 600;
    text-decoration: underline;
  }

</style>

<article id="article" class="content">
  <section class="main-header">
    <h1 class="content-title" id="title">{title}</h1>
    <nav class="block sm:hidden">
      <TableOfContents client:media="(max-width: 50em)" headers={headers} />
    </nav>
  </section>
  <section class="main-text">
    <slot />
  </section>
</article>